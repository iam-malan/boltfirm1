---
const team = [
  {
    name: "Sarah Johnson",
    role: "Senior Partner",
    image: "https://randomuser.me/api/portraits/women/76.jpg"
  },
  {
    name: "Michael Chen",
    role: "Corporate Law Specialist",
    image: "https://randomuser.me/api/portraits/men/32.jpg"
  },
  {
    name: "Emily Rodriguez",
    role: "Litigation Expert",
    image: "https://randomuser.me/api/portraits/women/45.jpg"
  }
];
---

<section id="team" class="py-16 sm:py-20">
  <div class="container mx-auto px-4 sm:px-6">
    <h2 class="text-center font-playfair text-3xl sm:text-4xl text-law-dark mb-12 sm:mb-16" data-aos="fade-up">
      Our Legal Team
    </h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 sm:gap-12">
      {team.map((member, index) => (
        <div 
          class="text-center"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="relative mb-4 sm:mb-6 group">
            <div class="absolute inset-0 bg-law-gold/20 rounded-full transform group-hover:scale-105 transition-transform duration-300"></div>
            <img 
              src={member.image}
              alt={member.name}
              class="w-36 h-36 sm:w-48 sm:h-48 rounded-full mx-auto relative object-cover"
            />
          </div>
          <h3 class="font-playfair text-lg sm:text-xl text-law-dark mb-1 sm:mb-2">{member.name}</h3>
          <p class="font-raleway text-sm sm:text-base text-gray-600">{member.role}</p>
        </div>
      ))}
    </div>
  </div>
</section>

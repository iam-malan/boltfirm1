<section id="contact" class="py-16 sm:py-20">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-center font-playfair text-3xl sm:text-4xl text-law-dark mb-12 sm:mb-16" data-aos="fade-up">
        Contact Us
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-12">
        <div data-aos="fade-right" class="order-2 md:order-1">
          <h3 class="font-playfair text-xl sm:text-2xl text-law-dark mb-4">Get in Touch</h3>
          <div class="space-y-4 font-raleway text-sm sm:text-base">
            <p>
              <strong>Address:</strong><br>
              123 Long Street<br>
              Cape Town City Centre<br>
              Cape Town, 8001
            </p>
            <p>
              <strong>Phone:</strong><br>
              +27 21 123 4567
            </p>
            <p>
              <strong>Email:</strong><br>
              info@vandermerwe.co.za
            </p>
          </div>
        </div>
        
        <form class="space-y-4 sm:space-y-6 order-1 md:order-2" data-aos="fade-left">
          <div>
            <input 
              type="text" 
              placeholder="Your Name"
              class="w-full px-3 sm:px-4 py-2 rounded border border-gray-300 focus:border-law-gold focus:outline-none font-raleway text-sm sm:text-base"
            />
          </div>
          <div>
            <input 
              type="email" 
              placeholder="Your Email"
              class="w-full px-3 sm:px-4 py-2 rounded border border-gray-300 focus:border-law-gold focus:outline-none font-raleway text-sm sm:text-base"
            />
          </div>
          <div>
            <textarea 
              placeholder="Your Message"
              rows="4"
              class="w-full px-3 sm:px-4 py-2 rounded border border-gray-300 focus:border-law-gold focus:outline-none font-raleway text-sm sm:text-base"
            ></textarea>
          </div>
          <button 
            type="submit"
            class="w-full bg-law-gold text-white font-raleway px-6 sm:px-8 py-3 rounded hover:bg-law-gold/90 transition-colors text-sm sm:text-base"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
